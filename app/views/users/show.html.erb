<div class="row">
	<div class="cover-photo-wrapper" >		
		<%= render "shared/user_photo", user: @user %>
		<div class="profile-actions">
			<%= render render_actions %>
		</div>
	</div>
</div>

<br/>
<div class="row">
	<div class="col-md-3 col-sm-12">
	<% @user.friends.each do |friend| %>
		<%= link_to user_path(friend) do %>
			<%= friend.name %>
			<% end %>
	<% end %>
	<% @user.pics.each do |pic| %>
	<div class="photo-small" style="max-width:200px;">
	<%= image_tag pic.image %>
	</div>
	<% end %>
	</div>
	<div class="col-md-9 col-sm-12">
				<%= render "shared/post_photo_form" if current_user.id == @user.id %>
		    	<% @user.user_feed.each do |post| %>
					<%= render "posts/post", post: post %>
				<% end %>

	</div>
</div>

